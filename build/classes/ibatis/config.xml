<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN" 
"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<!-- 
	ibatis의 환경설정 파일이다.
 -->
<sqlMapConfig>

	<!-- 
		DAO 클래스에서 매핑된 SQL 구문을 지정할 때, 네임스페이스를 사용하도록 설정한다. 
	 -->
	<settings useStatementNamespaces="true" />

	<!-- 
		<transactionManager>
			트랜잭션 처리 방식을 지정하는 태그다.
		<dataSource>
			태그는 커넥션풀 설정을 지정하는 태그다.
			커넥션풀은 데이터베이스와 연결된 커넥션을 관리하는 객체다.
			커넥션풀을 이용하면 데이터베이스 액세스 성능을 향상시킬 수 있고,
			커넥션생성에 소요되는 부하를 감소시킬 수 있다.
	 -->
	<transactionManager type="JDBC">
	  	  <dataSource type="SIMPLE">
	  	  	  <property name="JDBC.Driver" value="oracle.jdbc.OracleDriver"/>
	  	  	  <property name="JDBC.ConnectionURL" value="jdbc:oracle:thin:@0.tcp.jp.ngrok.io:10129:xe"/>


	  	  	  <property name="JDBC.Username" value="todoit"/>
	  	  	  <property name="JDBC.Password" value="zxcv1234"/>
	  	  </dataSource>
	  </transactionManager>
	  
	  <!-- 
	  	매핑된 SQL 구문이 정의된 SQL Mapper 파일의 경로를 등록하는 태그다.
	   -->
	  <sqlMap resource="ibatis/mappers/address.xml" />
	  <sqlMap resource="ibatis/mappers/comm-categories.xml" />
	  <sqlMap resource="ibatis/mappers/comm-likes.xml" />
	  <sqlMap resource="ibatis/mappers/comm-replies.xml" />
	  <sqlMap resource="ibatis/mappers/community.xml" />
	  <sqlMap resource="ibatis/mappers/meeting.xml" />
	  <sqlMap resource="ibatis/mappers/meeting-categories.xml" />
	  <sqlMap resource="ibatis/mappers/meeting-replies.xml" />
	  <sqlMap resource="ibatis/mappers/payments.xml" />
	  <sqlMap resource="ibatis/mappers/users.xml" />
	  <sqlMap resource="ibatis/mappers/wishes.xml" />


</sqlMapConfig>   